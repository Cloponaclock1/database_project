<script src="./js/add_employee.js"></script>


<h1>Employees</h1>


{{!-- Create a table --}}
<table id="employee-table">

    {{!-- Header section --}}
        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the corresponding data --}}
        {{#each data}}
        <tr data-value="{{this.employeesID}}"></td>
            <td>{{this.employeesID}}</td>
            <td>{{this.employeesName}}</td>
            <td><button onclick="deleteEmployee({{this.employeesID}})">Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table>
<div>
    <button onclick="additem()">Add Employee</button>
    <button onclick="edititem()">Edit Employee</button>
</div>


<div id="insert">
    <!-- insert table -->

    <h2>Add an employee</h2>
    <p>To add a new person, please enter their information below and click `Submit`!</p>
    <form id='add-employee-form-ajax'>
        <label for="input-fname">Full Name: </label>
        <input type="text" name="input-fname" id="input-fname">
        <input type="submit"> 
    </form> 
</div>

<div id="update">
        <!-- update table -->

    <h2>Updating A Employees Name</h2>
    <p>To update a specific user's name select thier name on the dropdown box and corrected with the text input box.</p>
    <form id='update-employee-form-ajax'>

        <label for="input-fullname">Full name: </label>
        <select name="input-fullname" id="mySelect">
            <option value="test">Select a Person</option>
            {{#each data}}
            <option value="{{this.employeesID}}">{{this.employeesName}} </option>
            {{/each}}
        </select>

        <label for="input-fullname">Name: </label>
        <input type="text" name="input-fullname" id="input-fullname">
        <input type="submit">

    </form>




</div>
<script src="./js/update_employee.js"></script>
<script src="./js/delete_person.js"></script>
